<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F7A328"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="26dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:outlineSpotShadowColor="@color/black"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/numbs_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/segoeprint"
                android:gravity="end|center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:outlineSpotShadowColor="@color/black"
            app:cardCornerRadius="9dp"

            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView">


            <TextView
                android:id="@+id/finally_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/segoeprint"
                android:gravity="end|center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="top"
            android:scaleType="centerCrop"

            android:src="@drawable/fox_backround"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Calculator Fox"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="vertical"
            android:padding="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/remove_all_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/remove_all_effect"
                    android:tag="C"

                    />

                <ImageView
                    android:id="@+id/secret_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/secret_effect"
                    android:tag="%" />

                <ImageView
                    android:id="@+id/divide_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/divide_effect"
                    android:tag="รท" />

                <ImageView
                    android:id="@+id/remove_one_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/remove_one_effect"
                    android:tag=""
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/seven_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/seven_effect"
                    android:tag="7"

                    android:textDirection="7"

                    />

                <ImageView
                    android:id="@+id/eight_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/eight_effect"
                    android:tag="8" />

                <ImageView
                    android:id="@+id/nine_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/nine_effect"
                    android:tag="9" />

                <ImageView
                    android:id="@+id/multiplication_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/multiplication_effect"
                    android:tag="ร"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/for_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/for_effect"
                    android:tag="4"

                    />

                <ImageView
                    android:id="@+id/five_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/five_effect"
                    android:tag="5" />

                <ImageView
                    android:id="@+id/six_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/six_effect"
                    android:tag="6" />

                <ImageView
                    android:id="@+id/substraction_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/substraction_effect"
                    android:tag="-"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/one_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/one_effect"
                    android:tag="1"

                    />

                <ImageView
                    android:id="@+id/two_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/two_effect"
                    android:tag="2" />

                <ImageView
                    android:id="@+id/three_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/three_effect"
                    android:tag="3" />

                <ImageView
                    android:id="@+id/add_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/add_effect"
                    android:tag="+"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/zero_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/zero_effect"
                    android:tag="0"

                    />

                <ImageView
                    android:id="@+id/point_btn"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:src="@drawable/point_effect"
                    android:tag="." />


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:outlineAmbientShadowColor="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/equals_btn"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/equals_effect"
                        android:tag="=" />
                    />
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>